<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:centerColor="#0058D3F7" android:endColor="#002ECCFA" android:startColor="#0081DAF5" />
            <stroke android:width="3dp" android:color="#00000000" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:angle="270" android:centerColor="#0058D3F7" android:endColor="#002ECCFA" android:startColor="#0081DAF5" />
            <stroke android:width="3dp" android:color="#00000000" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#00ffffff" android:startColor="#00ffffff" />
            <stroke android:width="5dp" android:color="#00000000" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</selector>