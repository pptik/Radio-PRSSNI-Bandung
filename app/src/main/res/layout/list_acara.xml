<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:weightSum="9">

    <ImageView
        android:id="@+id/prof_pic_lst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="7"
        android:adjustViewBounds="true"
        android:background="@drawable/profile_circular_border_imageview"
        android:scaleType="fitXY"
        android:src="@drawable/ic_action_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingLeft="15dip">

        <TextView
            android:id="@+id/tx_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Agenda"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/tx_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Acara" />

        <TextView
            android:id="@+id/tx_waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/id_play"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/ic_action_play" />

            <ImageButton
                android:id="@+id/id_stop"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/ic_action_stop" />

            <ImageButton
                android:id="@+id/id_download"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:src="@drawable/ic_action_download" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:weightSum="10">

            <ProgressBar
                android:id="@+id/id_download_progress"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/id_download_size"
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:layout_weight="8"
                android:textAlignment="textEnd"
                android:layout_gravity="end|center_horizontal"
                android:textSize="8sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>