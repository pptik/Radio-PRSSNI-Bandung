<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/prof_pic_lst"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="@drawable/profile_circular_border_imageview"
        android:scaleType="fitXY"
        android:src="@drawable/ic_action_name" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingLeft="15dip">

        <TextView
            android:id="@+id/tx_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Acara"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/tx_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Acara" />

        <TextView
            android:id="@+id/tx_waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waktu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ProgressBar
                android:id="@+id/id_download_progress"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="10dip"
                android:visibility="gone"
                android:layout_weight="8"/>

            <TextView
                android:id="@+id/id_download_size"
                android:layout_width="0dp"
                android:layout_height="10dip"
                android:layout_weight="2"
                android:textAlignment="textEnd"
                android:layout_gravity="end|center_horizontal"
                android:textSize="8sp"
                android:visibility="gone"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/id_download"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_action_download" />
</LinearLayout>